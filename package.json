    "lint-staged": "9.5.0",
    "react": "16.12.0",
    "react-native": "0.62.3",
    "react-native-camera": "3.13.0",
    "react-native-reanimated": "1.4.0",
    "semantic-release": "^15.13.31",
    "tsdx": "0.11.0",
    "tslib": "1.10.0",
    "typescript": "3.7.2"
